{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "preserve"
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.vue",
        "shims-vue.d.ts"  // shims 파일도 포함
    ],
    "exclude": ["node_modules"]
}
